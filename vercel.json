{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/simple_api.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/simple_api.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "MISTRAL_API_KEY": "@mistral_api_key"
  },
  "functions": {
    "api/*.py": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
} 